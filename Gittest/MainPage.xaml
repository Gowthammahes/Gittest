<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:Gittest" x:Class="Gittest.MainPage">
    <StackLayout Margin="25" Padding="0,75,0,0">
        <Entry Placeholder="Enter the first Text to add" Text="{Binding Entry1}" />
        <Entry Placeholder="Enter second Text to add" Text="{Binding Entry2}" />
        <Button Text="Add" BackgroundColor="Lime" Command="{Binding AddButton_Tapped}" TextColor="Black" />
        <Label Text="{Binding Sum}" />
    </StackLayout>
</ContentPage>